# Environment
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://pulse:pulse@localhost:5432/pulse_db
MONGO_URL=mongodb://localhost:27017
MONGO_DB_NAME=pulse_content

# Redis
REDIS_URL=redis://localhost:6379/0

# Reddit API (sostituisci con le tue credenziali)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=PulseBot/1.0

# GDELT & YouTube (opzionali per ora)
# GDELT_API_KEY=
# YOUTUBE_API_KEY=

# Scraping
SCRAPING_INTERVAL_MINUTES=10
MAX_PAGES_PER_SOURCE=10

# ML Models
EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
MIN_TOPIC_SIZE=5
